<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="video"
            type="com.example.myyoutubever2.database.entity.VideoDB" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.greenfrvr.hashtagview.HashtagView
            android:id="@+id/videoHashTag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:rowGravity="center"
            app:tagPaddingBottom="5dp"
            app:tagPaddingLeft="13dp"
            app:tagPaddingRight="13dp"
            app:tagPaddingTop="5dp"
            app:tagTextColor="#394ee5"
            app:tagTextSize="14dp" />

        <TextView
            android:id="@+id/videoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="16sp"
            android:padding="5dp"
            android:text="@{video.title}"
            app:layout_constraintTop_toBottomOf="@id/videoHashTag"
            tools:text="통기타하나로 7탄 1시간 연속 재생"
            style="@style/style_video_title"/>

        <TextView
            android:id="@+id/videoViewCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/videoTitle"
            tools:text="조회수 28만회 , 1개월 전"
            style="@style/style_video_information"/>

        <com.example.myyoutubever2.view.VideoContentsView
            android:id="@+id/videoLike"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/videoViewCount"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/notVideoLike"
            app:contentsImage="1"
            app:contentsName="@{video.getLikeCount()}"/>

        <com.example.myyoutubever2.view.VideoContentsView
            android:id="@+id/notVideoLike"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/videoViewCount"
            app:layout_constraintLeft_toRightOf="@id/videoLike"
            app:layout_constraintRight_toLeftOf="@id/videoShare"
            app:contentsImage="2"
            app:contentsName="@{video.getNotLikeCount()}"/>

        <com.example.myyoutubever2.view.VideoContentsView
            android:id="@+id/videoShare"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/videoViewCount"
            app:layout_constraintLeft_toRightOf="@id/notVideoLike"
            app:layout_constraintRight_toLeftOf="@id/videoOffLineSave"
            app:contentsImage="3"
            app:contentsName="공유"/>

        <com.example.myyoutubever2.view.VideoContentsView
            android:id="@+id/videoOffLineSave"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/videoViewCount"
            app:layout_constraintLeft_toRightOf="@id/videoShare"
            app:layout_constraintRight_toLeftOf="@id/videoSave"
            app:contentsImage="4"
            app:contentsName="오프라...저장"/>

        <com.example.myyoutubever2.view.VideoContentsView
            android:id="@+id/videoSave"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/videoViewCount"
            app:layout_constraintLeft_toRightOf="@id/videoOffLineSave"
            app:layout_constraintRight_toRightOf="parent"
            app:contentsImage="5"
            app:contentsName="저장"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
